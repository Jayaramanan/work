				<artifactId>cobertura-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</reporting>
	<profiles>
		<!--
			Standalone Tomcat configuration. This profile should be used to deploy applications to local development Tomcat instance
			for testing purposes.
		-->
		<profile>
			<id>tomcat5x-standalone</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.cargo</groupId>
						<artifactId>cargo-maven2-plugin</artifactId>
						<version>1.0</version>
						<configuration>
							<container>
								<containerId>tomcat5x</containerId>
								<home>${cargo.tomcat.home}</home>
							</container>
							<configuration>
								<type>standalone</type>
								<home>target/tomcat5x</home>
							</configuration>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<!--
				Existing Tomcat configuration.. This profile should be used only for deployments in TESTING environments by CI server.
			-->
			<id>tomcat5x-installed</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.cargo</groupId>
						<artifactId>cargo-maven2-plugin</artifactId>
						<version>1.0</version>
						<configuration>
							<container>
								<containerId>tomcat5x</containerId>
							</container>
							<configuration>
								<type>existing</type>
								<home>${cargo.tomcat.home}</home>
							</configuration>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>configs-override</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.3</version>
						<executions>
							<execution>
								<phase>prepare-package</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<mkdir dir="${configRepackageDir}" />
										<property name="artifact.path"
											value="${project.build.directory}/${project.build.finalName}/webstart/ACNi3-${jnlpArtifactVersion}.jar" />
										<property name="extracted.dir" value="${configRepackageDir}/contents" />
										<unzip src="${artifact.path}" dest="${extracted.dir}" />
										<copy todir="${extracted.dir}" overwrite="true">
											<fileset dir="src/config/${configName}/acni3-jar">
												<include name="**/*" />
											</fileset>
										</copy>
										<zip basedir="${extracted.dir}" destfile="${artifact.path}" />
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-jarsigner-plugin</artifactId>
						<version>1.2</version>
						<configuration>
							<alias>ni3key</alias>
							<keypass>ni3supersecurepass</keypass>
							<keystore>ni3store</keystore>
							<storepass>ni3supersecurestorepass</storepass>
							<archiveDirectory>${project.build.directory}/${project.build.finalName}/webstart</archiveDirectory>
							<processMainArtifact>false</processMainArtifact>
						</configuration>
						<executions>
							<execution>
								<id>sign</id>
								<phase>prepare-package</phase>
								<goals>
									<goal>sign</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
			<properties>
				<configRepackageDir>${project.build.directory}/configs/repack</configRepackageDir>
				<configSourceArtifactDir>${project.build.directory}/jnlp</configSourceArtifactDir>
				<configName>default</configName>
			</properties>
		</profile>
	</profiles>
	<properties>
		<buildVersion>${maven.build.timestamp}</buildVersion>
        <configName>default</configName>
		<!-- This property is required to implement custom war file naming for Hudson builds (INF-146) -->
		<customFinalName>ACNi3Web</customFinalName>
		<jnlpArtifactVersion>${module.version}</jnlpArtifactVersion>
	</properties>
</project>
